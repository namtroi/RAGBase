{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "noEmit": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["../apps/backend/src/*"],
      "@tests/*": ["./*"]
    },
    "types": ["vitest/globals", "node"]
  },
  "include": ["./**/*"],
  "exclude": [
    "node_modules",
    "helpers/api.ts",
    "helpers/database.ts"
  ]
}
