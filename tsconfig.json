{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "rootDir": ".",
    "outDir": "./dist",
    "paths": {
      "@/*": ["apps/backend/src/*"],
      "@tests/*": ["tests/*"]
    }
  },
  "include": [
    "tests/**/*",
    "apps/backend/src/**/*"
  ],
  "exclude": ["node_modules", "dist", "apps/backend/dist"]
}
