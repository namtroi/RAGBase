{
  "name": "ragbase",
  "private": true,
  "packageManager": "pnpm@10.20.0",
  "type": "module",
  "scripts": {
    "dev": "turbo run dev",
    "dev:all": "docker compose -f docker-compose.dev.yml up -d && concurrently -n backend,worker,frontend -c blue,green,cyan \"pnpm --filter @ragbase/backend dev\" \"cd apps/ai-worker && . .venv/bin/activate && python -m src.main\" \"pnpm --filter @ragbase/frontend dev\"",
    "build": "turbo run build",
    "test": "./scripts/test-all.sh",
    "check": "./scripts/check-all.sh",
    "lint": "pnpm --filter @ragbase/backend lint && pnpm --filter @ragbase/frontend lint",
    "type-check": "pnpm --filter @ragbase/backend type-check && pnpm --filter @ragbase/frontend type-check"
  },
  "devDependencies": {
    "@testcontainers/postgresql": "^10.13.0",
    "@testcontainers/redis": "^10.13.0",
    "@types/node": "^20.19.27",
    "@types/pg": "^8.11.0",
    "concurrently": "^9.2.1",
    "pg": "^8.11.0",
    "turbo": "^2.0.0",
    "vitest": "^2.1.9"
  }
}
